<h1>See what's on everyone's list!</h1>

<%@lists.each do |list|%>
    
        <h2><%=list[:user]%>: <%=list[:list].name%></h2>
        <table>
            <tr>
                <th>Item</th>
                <th>Price</th>
                <th>Ranking</th>
            </tr>
            <%list[:items].each do |item|%>
                <tr>
                    <td><%=item[:name]%></td>
                    <td>$<%=item[:price]%></td>
                    <td><%=item[:ranking]%></td>
                </tr>
            <% end %>
    
        </table>
        <br>

<% end %>