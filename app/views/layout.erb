  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>ChristmasListSinatra</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css2?family=Sigmar+One&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Mountains+of+Christmas:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/main.css" />
  </head>
  <body>
    <div class="wrapper">
      <div class="header">
          <h1 id="title">Wish a List</h1>
      </div>
        <div class="nav">
          <% unless request.env['PATH_INFO'] == "/"%>
          <ul>
            <li><a href="/">Home</a></li>
              <% if logged_in?%>
            <li><a href="/lists">View Everyone's Wish Lists</a></li>
            <li><a href="/mylists">View Your Wish Lists</a></li>
            <li><a href="/lists/new">Create a New List</a></li>
            <li><a href="/logout">Log Out</a></li>
          </ul>
            <%end%>
          <% end %>
        </div>
        <div class="error">
          <% if flash[:error]%>
            <br>
            <h3><%=flash[:error]%></h3>
          <% end %>
        </div>
        <div class="success">
          <%if flash[:message]%>
          <br>
            <h3><%=flash[:message]%></h3>
          <% end %>
        </div>

        <%= yield %>

      <footer class="branding">
        <small>&copy; 2020 <strong>ChristmasListSinatra</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <!--[if lt IE 7]>
      <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.2/CFInstall.min.js"></script>
      <script>window.attachEvent("onload",function(){CFInstall.check({mode:"overlay"})})</script>
    <![endif]-->
  </body>
</html>
